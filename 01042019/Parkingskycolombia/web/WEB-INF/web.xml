<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>olvidocontrasena</servlet-name>
        <servlet-class>ControllerServlet.olvidocontrasena</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cierre_Sesion</servlet-name>
        <servlet-class>ControllerServlet.Cierre_Sesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cierre_Sesion</servlet-name>
        <url-pattern>/Cierre_Sesion</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>ControllerServlet.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultarusuario</servlet-name>
        <servlet-class>ControllerServlet.consultarusuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>olvidocontrasena</servlet-name>
        <url-pattern>/olvidocontrasena</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/InicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultarusuario</servlet-name>
        <url-pattern>/consultarusuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
